<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.board.BoardSQLMapper">

    <!-- 게시글 목록 -->
    <select id="getBoardList" resultType="BoardVo">
        select * from eden_board
    </select>

    <!-- 게시글 작성 -->
    <insert id="write">
        insert into eden_board(category_no, user_no, board_title, board_content, board_readcount, board_write_date)
        VALUES (
                #{category_no},
                #{user_no},
                #{board_title},
                #{board_content},
                0,
                now())
    </insert>

    <!-- 게시글 상세보기 페이지 -->
    <select id="getBoardByNo" resultType="BoardVo">
        select *
        from eden_board
        where board_no = #{board_no}
    </select>

    <!-- 게시글 수정 -->
    <update id="updateBoard">
        update eden_board
        SET board_title   = #{board_title},
            board_content = #{board_content}
        where board_no = #{board_no}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard">
        delete
        from eden_board
        where board_no = #{board_no}
    </delete>

    <!-- 게시글 좋아요 -->
    <insert id="doLike">
        insert into eden_board_like (user_no, board_no, like_date)
        values (#{user_no}, #{board_no}, now())
    </insert>

    <!-- 게시글 좋아요 상태 -->
    <select id="getMyLikeCount" resultType="int">
        select count(*) from eden_board_like where user_no = #{user_no} and board_no = #{board_no}
    </select>

    <!-- 게시글 좋아요 취소 -->
    <delete id="deleteLike">
        delete
        from eden_board_like
        where board_no = #{board_no} and user_no = #{user_no}
    </delete>

    <!-- 게시글 좋아요 총 갯수 -->
    <select id="getTotalLikeCount" resultType="int">
        select count(*) from eden_board_like where board_no = #{board_no}
    </select>

    <!-- 게시글 카테고리별 출력 -->
    <select id="getBoardByCategoryList" resultType="BoardVo">
        select * from eden_board where category_no = #{category_no}
    </select>

    <!-- 게시글 카테고리 정보 -->
    <select id="getCategoryByNo" resultType="CategoryVo">
        select * from eden_board_category where category_no = #{category_no}
    </select>

    <!-- 게시글 카테고리 목록 -->
    <select id="getCategoryList" resultType="CategoryVo">
        select * from eden_board_category
    </select>
</mapper>